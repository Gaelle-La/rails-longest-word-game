<h2 class="p-3">New game</h2>
<div class="d-flex justify-content-around" style="width: 60vw">
  <% @letters.each do |letter| %>
    <p class="d-flex justify-content-center p-3 bg-primary text-white" style="width: 55px; height: 100%"><%= letter.upcase%></p>
  <% end %>
</div>
<div style="width: 60vw">
  <p>What is the longest word you can find?</p>
  <form class="input-group mb-3" action="/score" method="POST" data-turbo="false">
    <% @letters.each do |letter| %> <input type="hidden" name="letters[]" value="<%= letter %>"> <% end %>
    <input type="text" class="form-control" name="answer">
    <input class="btn btn-outline-secondary" type="submit" value="Play">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
